{
  "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "rootDir": "./src",
      "outDir": "./build",
      "strict": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
          "node_modules/@types",
          "./typings"
      ],
      "sourceMap": false,
      "baseUrl": "./",
      "paths": {
        "typings": ["./typings"]
      }
  },
  "include": [
      "./src/**/*.ts",
      "./typings/*.d.ts"
  ],
  "exclude": [
      "node_modules",
      "build"
  ],
}